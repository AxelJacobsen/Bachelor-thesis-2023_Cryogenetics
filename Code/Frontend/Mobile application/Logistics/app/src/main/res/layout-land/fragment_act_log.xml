<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/actLogFragment"
    android:layout_margin="7dip"
    tools:context=".ui.actLog.ActLogFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/titleFilterSearchLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/bFilter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#9DB5BF"
            android:text="@string/filterbutton"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.10" />

        <TextView
            android:id="@+id/tvActLogTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/ActLog"
            android:textColor="@color/black"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <View
            android:id="@+id/view2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#9DB5BF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.35"/>

        <SearchView
            android:id="@+id/searchView2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/white"
            android:queryHint="Search"
            android:layout_margin="5dp"
            app:layout_constraintBottom_toBottomOf="@+id/view2"
            app:layout_constraintEnd_toEndOf="@+id/view2"
            app:layout_constraintStart_toStartOf="@+id/view2"
            app:layout_constraintTop_toTopOf="@+id/view2">
        </SearchView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tableLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleFilterSearchLayout">

        <TextView
            android:id="@+id/tvActLogNr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dip"
            android:background="@color/white"
            android:gravity="start"
            android:padding="3dip"
            android:text="@string/hashNr"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.123" />

        <TextView
            android:id="@+id/tvActLogTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dip"
            android:background="@color/white"
            android:gravity="start"
            android:padding="3dip"
            android:text="@string/notifcations"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvActLogNr"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.123" />

        <TextView
            android:id="@+id/tvActLogClient"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dip"
            android:background="@color/white"
            android:gravity="start"
            android:padding="3dip"
            android:text="@string/notifcations"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvActLogTime"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.123" />
        <TextView
            android:id="@+id/tvActLogLocation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dip"
            android:background="@color/white"
            android:gravity="start"
            android:padding="3dip"
            android:text="@string/location"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvActLogClient"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.123" />

        <TextView
            android:id="@+id/tvActLogAct"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dip"
            android:background="@color/white"
            android:gravity="start"
            android:padding="3dip"
            android:text="@string/client"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvActLogLocation"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.123" />

        <TextView
            android:id="@+id/tvActLogComment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dip"
            android:background="@color/white"
            android:gravity="start"
            android:padding="3dip"
            android:text="@string/status"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvActLogAct"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.123" />

        <TextView
            android:id="@+id/tvActLogSign"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dip"
            android:background="@color/white"
            android:gravity="start"
            android:padding="3dip"
            android:text="@string/inovice"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvActLogComment"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.123" />

        <TextView
            android:id="@+id/tvActLogStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dip"
            android:background="@color/white"
            android:gravity="start"
            android:padding="3dip"
            android:text="@string/notifcations"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvActLogSign"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.123" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_act_log"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>